<% layout("/layouts/boilerplate.ejs") %>

    <body>
       <br>
        <div class="row">
            <div class="col-8 ">
                <div class="card col-6 ">
                     <h2>Listing details</h2>
                     <br>
                    <img src=" <%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text">
                           <b> <%=listing.title %></b> <br>
                           <br>
                             <%=listing.description %> <br>
                             <%=listing.price.toLocaleString("en-IN") %> <br>
                              <%=listing.location %> <br>
                            <%=listing.country %>
                        </p>
                        
                    <div class="btns">
                    <a href="/listings/<%=listing._id%>/edit"><button class="btn btn-dark add-btn mb-3 ">edit</button></a>
                    <form action="/listings/<%=listing._id %>?_method=DELETE" method="post"><button class="btn btn-dark add-btn mb-3 offset-2">DELETE</button>
                    </form>
                    </div>
                    </div>
                </div>
                  
            </div>
        </div>
    </body>